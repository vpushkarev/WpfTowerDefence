        xmlns:local="clr-namespace:WpfTowerDefence"
        mc:Ignorable="d"
        Title="UpgradeTower" Height="149.575" Width="316.147" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
